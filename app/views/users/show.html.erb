    	 <% when "Email" %>
          <%= header("Kommunikation", false) %>
          <div class="panel-body">
            <table class="table-striped" width="100%">
            <% emails = Email.where('m_to=? or m_from=?', @user.id, @user.id).order(created_at: :desc) %>
            <% if emails.count > 0 %>
              <tr>
                <th>Wer/Wann?</th>
                <th>Message</th>
              </tr>
            <% end %>
            <% emails.each do |e| %>
              <tr>
