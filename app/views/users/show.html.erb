                    <%= link_to user_path(current_user, :trx_status_ausgefuehrt_id => t.id) do %>
                      <i class="btn btn-primary glyphicon glyphicon-thumbs-up"></i>
                    <% end %>
                  <% end %>
                  <br><br>
                </div>
              </div>
            <% end %>
